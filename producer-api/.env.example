# Producer API Environment Configuration
# Copy ke file .env di project utama atau di producer-api/

# Database Configuration (Shared dengan project utama)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=e_govtoba
DB_USERNAME=root
DB_PASSWORD=

# API Configuration (untuk Consumer menjangkau Producer)
API_BASE_URL=http://localhost:8001/api/v1
API_TIMEOUT=30
API_CACHE_MINUTES=60

# APP Configuration
APP_NAME="E-GovToba Producer API"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8001

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Cache
CACHE_DRIVER=file

# Session
SESSION_DRIVER=file

# Queue
QUEUE_CONNECTION=sync

# Mail
MAIL_MAILER=log
MAIL_FROM_ADDRESS=no-reply@govtoba.local
MAIL_FROM_NAME="E-GovToba"
